<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_dark"
            android:gravity="center"
            android:weightSum="2">

            <EditText
                android:id="@+id/screen_tab_dialer_editText_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="2"
                android:background="@color/color_dark"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/colorWhite"
                android:textSize="45dp"></EditText>

            <ImageButton
                android:id="@+id/screen_tab_dialer_imageButton_input_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2px"
                android:src="@drawable/input_numbers"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_keyboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_tab_dialer_linearLayout_info"
            android:layout_margin="3px"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6">

                <include
                    android:id="@+id/screen_tab_dialer_button_1"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_2"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_3"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6">

                <include
                    android:id="@+id/screen_tab_dialer_button_4"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_5"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_6"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6">

                <include
                    android:id="@+id/screen_tab_dialer_button_7"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_8"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_9"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6">

                <include
                    android:id="@+id/screen_tab_dialer_button_star"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_0"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_sharp"
                    layout="@layout/view_dialer_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6">

                <include
                    android:id="@+id/screen_tab_dialer_button_video"
                    layout="@layout/view_dialer_button_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_audio"
                    layout="@layout/view_dialer_button_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_del"
                    layout="@layout/view_dialer_button_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
